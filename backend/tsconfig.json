{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": ["node"],
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./backend/@types"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
} 